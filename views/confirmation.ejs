<%- include('includes/header.ejs') %>
<body class="bg-gray-100 text-gray-900">
    <%- include('includes/nav.ejs') %>
    <main class="max-w-3xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-10">
        <h1 class="text-3xl font-semibold text-center text-blue-600">Reservation Confirmation</h1>

        <% if (reservation) { %>
            <p class="text-lg mt-4 text-center text-black">Thank you for your reservation, 
                <span class="font-bold text-blue-600 "><%= reservation.name %></span>!
            </p>
            
            <p class="mt-6 text-lg">Your reservation details are as follows:</p>
            <ul class="list-disc pl-5 mt-4">
                <li><strong class="text-blue-600">Email:</strong> <%= reservation.email %></li>
                <li><strong class="text-blue-600">Check-In Date:</strong> <%= reservation.checkInDate %></li>
                <li><strong class="text-blue-600">Check-Out Date:</strong> <%= reservation.checkOutDate %></li>
                <li><strong class="text-blue-600">Room Type:</strong> <%= reservation.roomType %></li>
                <li><strong class="text-blue-600">Price:</strong> <%= reservation.totalPrice %></li>
            </ul>
            <div class="mt-4 flex justify-center space-x-4">
                <a href="/reservation/<%= reservation.id %>/edit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Edit Reservation
                </a>
                <a href="/reservation/<%= reservation.id %>/delete" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                    Delete Reservation
                </a>
            </div>
            <p class="mt-6 text-lg text-center">We look forward to hosting you!</p>
        <% } else { %>
            <p class="text-center text-lg">No reservation found.</p>
        <% } %>

        <h2 class="mt-8 text-2xl text-center text-blue-600">All Reservations</h2>
        <% if (allReservations.length > 0) { %>
            <ul class="list-disc pl-5 mt-4">
                <% allReservations.forEach(res => { %>
                    <li class="mb-4">
                        <strong><%= res.name %></strong> - <%= res.roomType %> 
                        (Check-in: <%= res.checkInDate %>, Check-out: <%= res.checkOutDate %>, Price: <%= res.totalPrice %>)
                        <div class="mt-2">
                            <a href="/reservation/<%= res.id %>/edit" class="text-blue-500 hover:text-blue-700 mr-2">Edit</a>
                            <a href="/reservation/<%= res.id %>/delete" class="text-red-500 hover:text-red-700">Delete</a>
                        </div>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="text-center text-lg">No reservations available.</p>
        <% } %>

        <div class="mt-6 text-center">
            <a href="/" class="inline-block bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-300">Back to Home</a>
        </div>
    </main>
<%- include('includes/end.ejs') %>
